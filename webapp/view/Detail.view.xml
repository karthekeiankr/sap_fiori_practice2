<mvc:View
  controllerName="leaverequestnew.controller.Detail"
  xmlns:mvc="sap.ui.core.mvc"
   xmlns:unified="sap.ui.unified"
  xmlns="sap.m">

    <Page title="Leave Details" showFooter="true">
    <content>
      <VBox class="sapUiSmallMargin">
        <Text text="{Employee}" />
        <Text text="Reason: {Reason}" />
        <Text text="From: {StartDate} To: {EndDate}" />

        <unified:Calendar id="leaveCalendar"
          singleSelection="false"
          showWeekNumbers="false" />
      </VBox>
    </content>

    <footer>
      <Bar>
        <contentRight>
          <Button text="Approve" type="Accept" press=".onApprovePress"  />
          <Button text="Reject" type="Reject" press=".onRejectPress" />
        </contentRight>
      </Bar>
    </footer>
  </Page>
</mvc:View>
